groovy
pipeline {
    agent any

    triggers {
        githubPush()
    }

    environment {
        TARGET = "ubuntu@65.0.176.83"
    }

    stages {
        stage("Clone Repository") {
            steps {
                git url: "https://github.com/aniketchougule108/static-website-project-terraform-jenkins.git", branch: "main"
            }
        }

        stage("Deploy to EC2") {
            steps {
                sshagent(credentials: ['ec2-key']) {
                    sh """
                    ssh -o StrictHostKeyChecking=no $TARGET 'sudo rm -rf /var/www/html/*'
                    ssh -o StrictHostKeyChecking=no $TARGET 'sudo git clone https://github.com/aniketchougule108/static-website-project-terraform-jenkins.git /var/www/html'
                    ssh -o StrictHostKeyChecking=no $TARGET 'sudo systemctl restart apache2'
                    """
                }
            }
        }
    }
}