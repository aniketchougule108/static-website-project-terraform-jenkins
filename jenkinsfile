pipeline {
    agent any

    environment {
        EC2_USER = "ubuntu"
        EC2_HOST = "65.0.176.83"
        KEY_ID   = "node-app-key"
    }

    stages {

        stage('Checkout Code') {
            steps {
                git branch: 'main',
                    url: 'https://github.com/aniketchougule108/static-website-project-terraform-jenkins.git'
            }
        }

        stage('Prepare Remote Server') {
            steps {
                withCredentials([sshUserPrivateKey(credentialsId: "${KEY_ID}", keyFileVariable: 'SSH_KEY')]) {
                    sh """
                        echo "Testing SSH connection..."
                        ssh -o StrictHostKeyChecking=no -i $SSH_KEY ${EC2_USER}@${EC2_HOST} "echo Connected"
                    """
                }
            }
        }

        stage('Upload Files') {
            steps {
                withCredentials([sshUserPrivateKey(credentialsId: "${KEY_ID}", keyFileVariable: 'SSH_KEY')]) {
                    sh """
                        echo "Uploading files..."
                        rsync -avz -e "ssh -o StrictHostKeyChecking=no -i $SSH_KEY" ./ ${EC2_USER}@${EC2_HOST}:/var/www/html/
                    """
                }
            }
        }

        stage('Set Permissions & Restart') {
            steps {
                withCredentials([sshUserPrivateKey(credentialsId: "${KEY_ID}", keyFileVariable: 'SSH_KEY')]) {
                    sh """
                        echo "Setting permissions..."
                        ssh -o StrictHostKeyChecking=no -i $SSH_KEY ${EC2_USER}@${EC2_HOST} "
                            sudo chown -R www-data:www-data /var/www/html &&
                            sudo chmod -R 755 /var/www/html &&
                            sudo systemctl restart nginx
                        "
                    """
                }
            }
        }

        stage('Smoke Test') {
            steps {
                sh "curl -I http://${EC2_HOST}"
            }
        }
    }

    post {
        success {
            echo "Deployment Successful"
        }
        failure {
            echo "Deployment Failed"
        }
    }
}
