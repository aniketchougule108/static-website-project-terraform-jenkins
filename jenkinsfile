pipeline {
    agent any

    environment {
        REMOTE_USER = "ubuntu"
        REMOTE_HOST = "13.204.64.149"
        DEPLOY_PATH = "/var/www/html"
    }

    stages {

        stage('Checkout Code') {
            steps {
                git branch: 'main', url: 'https://github.com/aniketchougule108/static-website-project-terraform-jenkins.git'
            }
        }

        stage('Prepare Remote Server') {
            steps {
                withCredentials([sshUserPrivateKey(credentialsId: 'jenkins-key', keyFileVariable: 'SSH_KEY')]) {
                    sh '''
                        ssh -o StrictHostKeyChecking=no -i $SSH_KEY ${REMOTE_USER}@${REMOTE_HOST} "
                            sudo apt-get update -y &&
                            sudo apt-get install -y nginx &&
                            sudo systemctl enable nginx &&
                            sudo systemctl start nginx &&
                            sudo mkdir -p ${DEPLOY_PATH}
                        "
                    '''
                }
            }
        }

        stage('Upload Files') {
            steps {
                withCredentials([sshUserPrivateKey(credentialsId: 'jenkins-key', keyFileVariable: 'SSH_KEY')]) {
                    sh '''
                        scp -o StrictHostKeyChecking=no -i $SSH_KEY -r * ${REMOTE_USER}@${REMOTE_HOST}:${DEPLOY_PATH}/
                    '''
                }
            }
        }

        stage('Set Permissions & Restart') {
            steps {
                withCredentials([sshUserPrivateKey(credentialsId: 'jenkins-key', keyFileVariable: 'SSH_KEY')]) {
                    sh '''
                        ssh -o StrictHostKeyChecking=no -i $SSH_KEY ${REMOTE_USER}@${REMOTE_HOST} "
                            sudo chown -R www-data:www-data ${DEPLOY_PATH} &&
                            sudo chmod -R 755 ${DEPLOY_PATH} &&
                            sudo systemctl restart nginx
                        "
                    '''
                }
            }
        }

        stage('Smoke Test') {
            steps {
                sh '''
                    curl http://${REMOTE_HOST}
                '''
            }
        }
    }

    post {
        success {
            echo "✅ Deployment Successful!"
        }
        failure {
            echo "❌ Deployment Failed!"
        }
    }
}
